@using Boat
@model Boat.Model.Boat

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>@Model.BoatName</h3>
    </div>
    <div class="panel-body">
        <span>Boat Holder Name : @Model.BoatHolderName</span>
        <span>Rate per hour : @Model.RentRate</span>
    </div>
    <div class="panel-footer">
        <a class="btn btn-lg" asp-page="./Detail" asp-route-boatId="@Model.Id">
            <i class="fa fa-search-plus" aria-hidden="true"></i>
        </a>
        <a class="btn btn-lg" asp-page="./Edit" asp-route-boatId="@Model.Id">
            <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
        </a>
        <a class="btn btn-lg" asp-page="./Delete" asp-route-boatId="@Model.Id">
            <i class="fa fa-trash" aria-hidden="true"></i>
        </a>
    </div>
</div>